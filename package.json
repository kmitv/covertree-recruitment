{
  "name": "graphql-weatherstack-supabase",
  "version": "1.0.0",
  "description": "A simple TypeScript Node.js GraphQL API that integrates with Weatherstack and uses Supabase for DB storage.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest --coverage"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "dependencies": {
    "@apollo/server": "^4.11.3",
    "@supabase/supabase-js": "^2.48.0",
    "apollo-server": "^3.13.0",
    "axios": "^1.7.9",
    "bun-types": "^1.1.45",
    "dotenv": "^16.4.7",
    "graphql": "^16.10.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.5"
  }
}
